{
    "canvas": {
        "title": {
            "text": "Affected State and Union Territories"
        },
        "theme": "covid_theme"
    },
    "seriesdata": {
        "chartdata": [
            {
                "type": "geoheatmap",
                "data": []
            }
        ]
    },
    "metadata": {
        "axes": {
            "x": [2],
            "y": [[1]],
            "z": [1],
            "geo": [0],
            "clr": [1],
            "tooltip": ["<b>{{val(0)}}</b>", "<b>{{col(1)}}</b>: <span class='text-red-600'>{{val(1)}}</span>"]
        },
        "columns": [
            {
                "dataindex": 0,
                "columnname": "State",
                "datatype": "geo",
                "joinBy": "name_ascii",
                "geo": {
                    "format": {
                        "mapBy": "name_ascii"
                    }
                }
            },
            {
                "dataindex": 1,
                "columnname": "Total Infected",
                "datatype": "numeric"
            }
        ]
    },
    "map": {
        "scope": "countries-ind-1-india",
        "strokeColor": "#E57373",
        "fillColor": "rgb(251, 237, 234)",
        "renderingMode": "canvas"
    },
    "chart": {
        "zoom": {
            "enabled": true
        },
        "marginTop": 0,
        "marginRight": 0,
        "marginLeft": 0,
        "plot": {
            "plotoptions": {
                "geoheatmap": {
                    "strokeColor": "#E57373",
                    "strokeWidth": 0.5,
                    "legendHighlightEffect": {
                        "selectedSeries": "moody"
                    },
                    "datalabels": {
                        "show": true,
                        "fontSize": 12
                    }
                },
                "geoscatter": {
                    "marker": {
                        "symbol": "geo-location-1",
                        "size": 4,
                        "outerFillColor": "#e84b36",
                        "innerFillColor": "white",
                        "outerStrokeWidth": 1,
                        "outerStrokeColor": "rgb(251, 237, 234)"
                    },
                    "hoveroptions": {
                        "outerFillColor": "white",
                        "outerStrokeWidth": 2,
                        "innerFillColor": "#e84b36",
                        "outerStrokeColor": "#e84b36"
                    },
                    "animation": {
                        "type": "sizing"
                    },
                    "datalabels": {
                        "show": true
                    }
                }
            }
        }
    },
    "legend": {
        "enabled": true,
        "colors": ["white", "red"],
        "colorBand": {
            "minRange": 0
        }
    }
}
